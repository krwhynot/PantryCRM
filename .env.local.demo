# .env.local.demo - Kitchen Pantry CRM Local Demo
# Use this for local testing without Azure dependencies

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=demo-secret-key-for-local-testing-only
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=demo

# Local SQLite Database (no Azure dependencies)
DATABASE_URL="file:./dev.db"

# Demo OAuth Credentials (for testing)
GOOGLE_ID=demo_google_client_id
GOOGLE_SECRET=demo_google_client_secret
GITHUB_ID=demo_github_client_id  
GITHUB_SECRET=demo_github_client_secret

# Email Configuration (demo)
EMAIL_FROM=demo@kitchenpantrycrm.local
EMAIL_REPLY_TO=demo@kitchenpantrycrm.local

# Demo Settings
NEXT_PUBLIC_APP_NAME="Kitchen Pantry CRM - Demo"
NEXT_PUBLIC_DEMO_MODE=true