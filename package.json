{
  "name": "nextcrm-app",
  "version": "0.0.3-beta",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "cross-env prisma generate && cross-env prisma db push && cross-env prisma db seed && cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" next build",
    "build:safe": "cross-env prisma generate && cross-env prisma db push && cross-env prisma db seed && cross-env NODE_OPTIONS=\"--max-old-space-size=6144 --no-warnings\" NEXT_TELEMETRY_DISABLED=1 next build",
    "build:azure": "prisma generate && NODE_OPTIONS=\"--max-old-space-size=6144\" NEXT_TELEMETRY_DISABLED=1 CI=true NODE_ENV=production DATABASE_URL=\"postgresql://dummy:dummy@localhost:5432/dummy\" GOOGLE_ID=\"dummy\" GOOGLE_SECRET=\"dummy\" GITHUB_ID=\"dummy\" GITHUB_SECRET=\"dummy\" JWT_SECRET=\"dummy-secret-for-react19-build\" next build",
    "build:ci": "npm run clean && prisma generate && NODE_OPTIONS=\"--max-old-space-size=6144\" NEXT_TELEMETRY_DISABLED=1 CI=true NODE_ENV=production DATABASE_URL=\"postgresql://dummy:dummy@localhost:5432/dummy\" GOOGLE_ID=\"dummy\" GOOGLE_SECRET=\"dummy\" GITHUB_ID=\"dummy\" GITHUB_SECRET=\"dummy\" JWT_SECRET=\"dummy-secret-for-react19-build\" next build",
    "build:react19": "npm run clean && prisma generate && NODE_OPTIONS=\"--max-old-space-size=6144\" NEXT_TELEMETRY_DISABLED=1 CI=true NODE_ENV=production DATABASE_URL=\"postgresql://dummy:dummy@localhost:5432/dummy\" GOOGLE_ID=\"dummy\" GOOGLE_SECRET=\"dummy\" GITHUB_ID=\"dummy\" GITHUB_SECRET=\"dummy\" JWT_SECRET=\"dummy-secret-for-react19-build\" next build",
    "build:validate": "npm run clean && npm run build:ci && npm run analyze:simple",
    "analyze:vendor": "node scripts/analyze-vendor-bundle.js",
    "build:debug": "npm run clean && npm run build:ci && npm run analyze:vendor",
    "start": "next start",
    "start:azure": "next start -p $PORT",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "typecheck:production": "tsc --noEmit --project tsconfig.production.json",
    "test": "jest --watchAll",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\" --project=\"iPad\"",
    "test:desktop": "playwright test --project=\"Desktop Chrome\" --project=\"Desktop Firefox\" --project=\"Desktop Safari\"",
    "test:critical": "playwright test tests/e2e/critical-user-journeys.spec.ts",
    "test:workflows": "playwright test tests/e2e/food-service-workflows.spec.ts",
    "test:performance": "node tests/performance/run-all-performance-tests.js",
    "test:performance:load": "artillery run tests/performance/load-testing-4-users.yml",
    "test:performance:search": "artillery run tests/performance/search-performance-test.yml",
    "test:performance:reports": "artillery run tests/performance/report-generation-test.yml",
    "test:performance:memory": "node tests/performance/memory-usage-test.js",
    "performance:quick": "autocannon -c 4 -d 30 http://localhost:3000/api/organizations",
    "performance:memory-profile": "node --heap-prof --experimental-debug-memory-usage node_modules/next/dist/bin/next dev",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:client": "source-map-explorer .next/static/chunks/*.js",
    "analyze:report": "npm run build && npm run analyze:client",
    "analyze:bundle": "node ./scripts/analyze-bundle.js",
    "analyze:simple": "node ./scripts/simple-bundle-analyzer.js",
    "optimize": "npm dedupe && npm prune",
    "clean": "rimraf .next || rm -rf .next || echo 'Clean completed'",
    "prebuild": "npm run clean",
    "build:prod": "npm run prebuild && npm run build",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:add-auth": "node scripts/add-auth-to-api.js",
    "security:maintenance": "npx ts-node scripts/security-maintenance.ts",
    "security:test": "npm run test -- --testPathPattern=security",
    "migrate:excel": "npx tsx scripts/migrate-excel.ts",
    "migrate:test": "npx tsx src/lib/excel-migration/test-migration.ts",
    "migrate:analyze": "npx tsx src/lib/excel-migration/analyze-crm-workbook.ts",
    "setup:azure": "npx tsx scripts/setup-azure-integrations.ts",
    "deploy:infrastructure": "cd infrastructure && ./deploy.sh",
    "setup:monitoring": "./scripts/azure-monitor-setup.sh",
    "backup:create": "./scripts/automated-backup.sh",
    "security:scan": "trufflehog filesystem --directory=. --config=.trufflehog.yml",
    "prepare": "husky",
    "postinstall": "prisma generate || true",
    "setup:mcp": "bash scripts/setup-mcp.sh",
    "setup:mcp:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup-mcp.ps1",
    "settings:test": "npx tsx scripts/test-settings-validation.ts",
    "settings:migrate": "npx tsx scripts/migrate-settings.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio"
  },
  "prisma": {
    "seed": "node ./prisma/seed.js"
  },
