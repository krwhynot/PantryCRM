{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ],
      "@/ui/*": [
        "./src/components/ui/*",
        "./components/ui/*"
      ]
    }
  },
  "ts-node": {
    "esm": false
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "app/**/*.ts", "app/**/*.tsx", "components/**/*.ts", "components/**/*.tsx", "lib/**/*.ts", "types/**/*.ts", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", 
    "cypress", 
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "backup-removed",
    "**/lib/excel-migration/**/*",
    "**/src/lib/excel-migration/**/*",
    "**/src/components/excel-migration/**/*",
    "**/app/api/migration/**/*",
    "**/components/excel-migration/**/*",
    "prisma/seed-positions.ts"
  ]
}
