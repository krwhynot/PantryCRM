# Environment variables for local GitHub Actions testing with act
# These simulate GitHub Actions environment and secrets

# GitHub Environment Variables
GITHUB_WORKFLOW=CI/CD Pipeline
GITHUB_RUN_ID=1234567890
GITHUB_RUN_NUMBER=42
GITHUB_JOB=build-and-test
GITHUB_ACTION=run
GITHUB_ACTOR=act-user
GITHUB_REPOSITORY=your-org/PantryCRM
GITHUB_EVENT_NAME=push
GITHUB_REF=refs/heads/main
GITHUB_SHA=abc123def456
GITHUB_WORKSPACE=/github/workspace
GITHUB_SERVER_URL=https://github.com
GITHUB_API_URL=https://api.github.com
GITHUB_GRAPHQL_URL=https://api.github.com/graphql
RUNNER_OS=Linux
RUNNER_ARCH=X64
RUNNER_TEMP=/tmp

# Simulated GitHub Secrets (use dummy values for testing)
GITHUB_TOKEN=ghp_dummy_token_for_local_testing
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000
AZURE_CREDENTIALS={"clientId":"00000000-0000-0000-0000-000000000000","clientSecret":"dummy","subscriptionId":"00000000-0000-0000-0000-000000000000","tenantId":"00000000-0000-0000-0000-000000000000"}

# Application Secrets (dummy values for build)
DATABASE_URL=postgresql://dummy:dummy@localhost:5432/dummy
DATABASE_URL_PROD=postgresql://dummy:dummy@localhost:5432/dummy
JWT_SECRET=dummy-jwt-secret-for-local-testing
NEXTAUTH_SECRET=dummy-nextauth-secret-for-local-testing
NEXTAUTH_URL=http://localhost:3000
GOOGLE_ID=dummy-google-id
GOOGLE_SECRET=dummy-google-secret
GITHUB_ID=dummy-github-id
GITHUB_SECRET=dummy-github-secret

# Security Tool Tokens (dummy values)
SNYK_TOKEN=dummy-snyk-token
CODECOV_TOKEN=dummy-codecov-token
SENTRY_AUTH_TOKEN=dummy-sentry-token

# Monitoring Webhooks (dummy values)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/dummy/webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/dummy

# Performance Testing
LIGHTHOUSE_CI_TOKEN=dummy-lighthouse-token
DATADOG_API_KEY=dummy-datadog-key

# Azure App Service Configuration
AZURE_WEBAPP_NAME=pantry-crm-test
AZURE_WEBAPP_PACKAGE_PATH=.
PORT=3000

# Node Configuration
NODE_ENV=test
NODE_VERSION=20
NODE_OPTIONS=--max-old-space-size=1536

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# CI Configuration
CI=true
FORCE_COLOR=1