{
  "performance": {
    "tokenOptimization": true,
    "responseCompression": true,
    "cachingEnabled": true,
    "toolLimitation": false,
    "minimalMode": true
  },
  "limits": {
    "maxTokensPerQuery": 3000,
    "maxResponseTokens": 1200,
    "maxToolsPerQuery": 5,
    "sessionCacheDuration": "8h",
    "emergencyTokenLimit": 200
  },
  "tools": {
    "priorityOrder": ["memory", "filesystem", "context7", "tavily"],
    "costThreshold": "low",
    "parallelExecution": true,
    "autoFallback": true
  },
  "logging": {
    "tokenUsage": true,
    "responseTime": true,
    "toolEffectiveness": true,
    "errorRate": true,
    "changeTracking": true
  },
  "caching": {
    "projectContext": true,
    "frequentQueries": true,
    "toolResults": true,
    "sessionPersistence": true
  }
}